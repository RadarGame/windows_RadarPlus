<Window x:Class="RadarGame.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:RadarGame.UI.Views"
        xmlns:controls="clr-namespace:RadarGame.UI.Controls"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Radar Game" 
        Height="450"
        Width="300"
        Loaded="MainWindow_Loaded"
        Style="{StaticResource BaseWindowStyle}"
        ContextMenu="{x:Null}">
    <Grid>
        <controls:HeaderControl  VerticalAlignment="Top" HorizontalAlignment="Stretch"
                                 Panel.ZIndex="10"
        />
        <views:MainRadarGameControl/>
    </Grid>
</Window>
