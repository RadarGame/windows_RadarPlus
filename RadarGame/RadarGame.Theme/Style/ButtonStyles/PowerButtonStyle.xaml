                                                Height="70"
                                                Width="70"
                                                CornerRadius="50"
                                                >
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="1,0"
                                                                     EndPoint="0,1">
                                                    <GradientStop
                                                        x:Name="GradientLightInner"
                                                        Color="{DynamicResource RadarLightBackgroundColor}" Offset="1"/>
                                                    <GradientStop
                                                        x:Name="GradientDarkInner"
                                                        Color="{DynamicResource RadarDarkBackgroundColor}" Offset="0"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
